@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
       
            @Html.EJS().Chart("container").Series(series =>
       {

           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).TooltipMappingName("MappingName").XName("Country")
           .YName("GoldMedal").DataSource(ViewBag.ChartPoints).Name("Gold").ColumnSpacing(0.1).Add();
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).TooltipMappingName("MappingName").XName("Country")
               .YName("SilverMedal").DataSource(ViewBag.ChartPoints).Name("Silver").ColumnSpacing(0.1).Add();
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).TooltipMappingName("MappingName").XName("Country")
               .YName("BronzeMedal").DataSource(ViewBag.ChartPoints).Name("Bronze").ColumnSpacing(0.1).Add();

       }).PrimaryYAxis(px => px.Title("Medal Count").LineStyle(ls=>ls.Width(0)).MajorTickLines(mg=>mg.Width(0)).Maximum(50).Interval(10)
                ).PrimaryXAxis(px => px.Interval(1)
       .ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0))
       ).Tooltip(tt => tt.Enable(true).Shared(true).Header("<b>${point.tooltip}</b>")).ChartArea(area => area.Border(br => br.Width(0))
       ).LegendSettings(leg => leg.Visible(true).EnableHighlight(true)).Title("Olympic Medal Counts - RIO").Load("load").Render()
        </div>
    
 @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
@*custom code end*@
    <script>
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice?'None':'Trim';
            args.chart.primaryXAxis.labelRotation = ej.base.Browser.isDevice?'-45':'0';
        }
    </script>
}
