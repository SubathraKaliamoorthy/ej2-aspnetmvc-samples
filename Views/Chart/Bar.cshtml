@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
        
            @Html.EJS().Chart("container").Series(
            series => {
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Bar).Name("GDP").XName("Country").YName("GDP")
                    .Marker(marker => marker.DataLabel(label => label.Visible(false).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(font => font.FontWeight("600").Color("#ffffff")))).DataSource(ViewBag.ChartPoints).Width(2).ColumnSpacing(0.1).Add();
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Bar).Name("Share in World's GDP").XName("Country").YName("WorldShare")
                    .Marker(marker => marker.DataLabel(label => label.Visible(false).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(font => font.FontWeight("600").Color("#ffffff")))).DataSource(ViewBag.ChartPoints).Width(2).ColumnSpacing(0.1).Add();

            }).PrimaryXAxis(
            px => {
                px.ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorGridLines(mg=>mg.Width(0)).
                    MajorTickLines(mt=>mt.Width(0));
            }).PrimaryYAxis(
            py => {
                py.LabelFormat("{value}%").Title("GDP (In Percentage)").
                EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).LineStyle(ls=>ls.Width(0)).MajorTickLines(mt=>mt.Width(0));
            }).Tooltip(
            tooltip => {
                tooltip.Enable(true);
            }).ChartArea(area => area.Border(br => br.Width(0))).Title("GDP by Country in 2017").LegendSettings(leg => leg.Visible(true).EnableHighlight(true)).Load("load").Render()       
        
        </div>
    
@*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
@*custom code end*@
    <script>
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
@*custom code start*@
