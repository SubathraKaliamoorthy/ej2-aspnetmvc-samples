@using Syncfusion.EJ2.MultiColumnComboBox
@using EJ2MVCSampleBrowser.Models
@using Syncfusion.EJ2
@using Newtonsoft.Json
@section ControlsSection{
    <div class="control-section">
        <div class="control-wrapper">
            <div style='padding-top:30px;'>
                @Html.EJS().MultiColumnComboBox("filtering").Placeholder("Select a name").Fields(new MultiColumnComboBoxFieldSettings
                { Text = "Name", Value = "Experience" }).Columns(col =>
                {
                    col.Field("Name").Header("Name").Width("100").Add();
                    col.Field("YearOfJoining").Header("Year of Joining").Width("120").Add();
                    col.Field("Status").Header("Status").Width("90").Add();
                    col.Field("Location").Header("Location").Width("100").Add();
                    col.Field("Experience").Header("Experience in Year").Width("150").Add();
                }).PopupHeight("230px").Filtering("onfiltering").DataSource((IEnumerable<WorkDetails>)ViewBag.data).Render()
            </div>
        </div>
    </div>
    @*custom code start*@
    <style>
        .control-wrapper {
            margin: 0 auto;
            width: 585px;
        }

        @@media only screen and (max-width: 480px) {
            .control-wrapper {
                width: 300px;
            }
        }
    </style>
    @*custom code end*@
    <script type="text/javascript">
    function onfiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('Name', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject((IEnumerable<WorkDetails>)ViewBag.data)), query);
    }
    </script>
}

@section Meta{
    <meta name="description" content="This example demonstrates the filter in ASP.NET MVC MultiColumn ComboBox control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the built-in support to filter the <code>Datasource</code> in the MultiColumn ComboBox.</p>
    </div>
}
@section Description{
    <div id="description">
        <p>This sample illustrates to query the datasource and pass the resulted data when characters are typed in the search box triggers the <code>Filtering</code> event and using the <code>updateData</code> method to display the list of employees in the MultiColumn ComboBox.</p>
    </div>
}
@section Title{
    <title>ASP.NET MVC MultiColumn ComboBox filter Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of filter in ASP.NET MVC MultiColumn ComboBox Control</h1>
}