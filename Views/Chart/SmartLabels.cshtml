@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">     
        @Html.EJS().AccumulationChart("container").EnableBorderOnMouseMove(false).Series(series =>
        {
            series.StartAngle(60).DataLabel(dl => dl.Visible(true).Name("DataLabelMappingName").Position(Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside).ConnectorStyle(cs => cs.Length("20px").Type(Syncfusion.EJ2.Charts.ConnectorType.Curve)).Font(ft => ft.FontWeight("600"))).XName("Country").YName("Medal").DataSource(ViewBag.ChartPoints).Add();
        }
            ).Tooltip(tp => tp.Enable(true).Format("<b>${point.x}</b><br> Gold Medals: <b>${point.y}</b>").Header("")).EnableSmartLabels(true).LegendSettings(ls => ls.Visible(false)).Title("Rio Olympics Gold").Load("load").Render()
    </div>
    
    <script>
        var load = function(args){
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.accumulation.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            args.accumulation.series[0].radius = ej.base.Browser.isDevice ? "40%" : "65%";
            args.accumulation.series[0].dataSource[0].DataLabelMappingName = ej.base.Browser.isDevice ? "USA: 46" : "United States of America: 46";
            args.accumulation.series[0].dataSource[4].DataLabelMappingName = ej.base.Browser.isDevice ? "KZ: 3" : "Kazhakastan: 3";
            args.accumulation.series[0].dataSource[5].DataLabelMappingName = ej.base.Browser.isDevice ? "NZ: 4" : "New Zealand: 4";
            args.accumulation.series[0].dataSource[6].DataLabelMappingName = ej.base.Browser.isDevice ? "KR: 9" : "South Korea: 9";
            args.accumulation.series[0].dataSource[7].DataLabelMappingName = ej.base.Browser.isDevice ? "GB: 27" : "Great Britain: 27";
            args.accumulation.series[0].dataSource[8].DataLabelMappingName = ej.base.Browser.isDevice ? "CH: 3" : "Switzerland: 3";
            args.accumulation.series[0].dataSource[9].DataLabelMappingName = ej.base.Browser.isDevice ? "ASTL: 8" : "Australia: 8";
            args.accumulation.series[0].dataSource[10].DataLabelMappingName = ej.base.Browser.isDevice ? "NL: 8" : "Netherlands: 8";
            args.accumulation.series[0].dataSource[12].DataLabelMappingName = ej.base.Browser.isDevice ? "Uzbekistan: <br> 4" : "Uzebekistan: 4";
            args.accumulation.series[0].dataSource[16].DataLabelMappingName = ej.base.Browser.isDevice ? "AR: 3" : "Argentina: 3";
            args.accumulation.series[0].dataSource[17].DataLabelMappingName = ej.base.Browser.isDevice ? "SA: 2" : "South Africa: 2";
            args.accumulation.series[0].dataSource[18].DataLabelMappingName = ej.base.Browser.isDevice ? "KP: 2" : "North Korea: 2";                
        }
    </script>
}
