@using Syncfusion.EJ2;
@section ControlsSection{ 
    
    <div class="col-lg-8 control-section">
        
    @(Html.EJS().AccumulationChart("container").Series(series =>
            {
                series.DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.AccumulationLabelPosition.Inside).EnableRotation(true).Font(ft => ft.FontWeight("600")))
                  .XName("Product")
                  .YName("ProfitPercentage")
                  .EmptyPointSettings(ep => ep.Fill("#e6e6e6"))
                  .Name("Profit").Radius("80%")
                  .Add();
            })
            .Title("Annual Product-Wise Profit Analysis")
            .LegendSettings(ls => ls.Visible(false))
            .Tooltip(tp => tp.Enable(true).EnableHighlight(true).Header("").Format("<b>${point.x}</b><br> Profit: <b>$${point.y}K</b>"))
            .EnableBorderOnMouseMove(false).EnableSmartLabels(false)
            .Load("load").TextRender("textRender").Render()
    )
            </div>
    
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties" style="width: 100%">
            <tbody>
                <tr style="height: 50px">
                    <td style="width: 50%">
                        <div>
                            Empty Point Mode:
                        </div>
                    </td>
                    <td style="width: 50%;">
                        <div>
                            @Html.EJS().DropDownList("emptyPoint").Index(0).DataSource(ViewBag.data).Value("Drop").Change("changeEmptyPointMode").Render()

                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

@*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
    <script>
        var load = function (args) {
            args.accumulation.dataSource = [{ Product: "Rice", ProfitPercentage: 80 },{ Product: "Wheat", ProfitPercentage: null },{ Product: "Oil", ProfitPercentage: 70 },{ Product: "Corn", ProfitPercentage: 60 },{ Product: "Gram", ProfitPercentage: null },{ Product: "Milk", ProfitPercentage: 70 },{ Product: "Peas", ProfitPercentage: 80 },{ Product: "Fruit", ProfitPercentage: 60 },{ Product: "Butter", ProfitPercentage: null }]; 
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.accumulation.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            if ((selectedTheme.replace(/5.3/i, '5')) === 'bootstrap5-dark') {
                args.chart.series[0].emptyPointSettings.fill = '#FF7F7F';
            }
        }
        function changeEmptyPointMode() {
            var chart = document.getElementById("container").ej2_instances[0];
            var mode = document.getElementById("emptyPoint").ej2_instances[0];
            chart.series[0].emptyPointSettings.mode = mode.value;
            chart.refresh();
        }
        function textRender(args)
        {
            args.text = args.point.x + ": $" + args.point.y + "K";
        }
    </script>
}
