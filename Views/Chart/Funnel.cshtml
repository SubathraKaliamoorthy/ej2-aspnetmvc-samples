@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
    <div class="control-section">
        @(Html.EJS().AccumulationChart("container")
            .Series(sr =>
            {
                sr.Type(Syncfusion.EJ2.Charts.AccumulationType.Funnel)
                    .XName("InterviewProcess")
                    .YName("Candidates")
                    .DataLabel(dl => dl.Visible(true).Name("DataLabelMappingName").Position(Syncfusion.EJ2.Charts.AccumulationLabelPosition.Inside).Font(ft => ft.FontWeight("600")).TextWrap(Syncfusion.EJ2.Charts.TextWrap.Normal).ConnectorStyle(cs => cs.Length("20px")))
                    .Height("80%")
                    .GapRatio(0.03)
                    .NeckHeight("18%")
                    .Explode(false)
                    .DataSource(ViewBag.ChartPoints)
                    .Add();
            })
            .EnableAnimation(false)
            .Tooltip(tp => tp.Enable(false))
            .LegendSettings(leg => leg.Visible(false))
            .Load("load")
            .Title("Recruitment Process").Render()
            )
    </div>
        </div>

    <script>
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.accumulation.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            args.accumulation.series[0].width = ej.base.Browser.isDevice ? "90%" : "45%";
            args.accumulation.series[0].neckWidth = ej.base.Browser.isDevice ? "25%" : "15%";
            args.accumulation.series[0].dataSource[1].DataLabelMappingName = ej.base.Browser.isDevice ? "Personal <br> Interview: 58" : "Personal Interview: 58";
            args.accumulation.series[0].dataSource[2].DataLabelMappingName = ej.base.Browser.isDevice ? "Telephonic <br> Interview: 85" : "Telephonic Interview: 85";
        };
    </script>
}
