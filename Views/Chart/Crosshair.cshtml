@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/financial-data.js"></script>
    <div class="control-section">
        <div style="text-align:center">
      @Html.EJS().Chart("container").Series(series =>
     {

         series
         .Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line)
         .Marker(mr=>mr.Visible(true).Height(7).Width(7))
         .XName("xDate")
         .YName("High")
         .DataSource("ChartPoints")
             .Border(br => br.Color("transparent")).Add();

         series
         .Type(Syncfusion.EJ2.Charts.ChartSeriesType.HiloOpenClose)
         .BearFillColor("#2ecd71")
         .BullFillColor("#e74c3d")
         .YAxisName("yaxis")
         .High("High")
         .Low("Low")
         .Open("Open")
         .Close("Close")
         .XName("xDate")
         .DataSource("ChartPoints")
             .Add();


     }).Axes(ax => {
         ax.RowIndex(0)
         .OpposedPosition(true)
         .Minimum(82)
         .Maximum(88)
         .Name("yaxis")
         .CrosshairTooltip(ct=>ct.Enable(true))
         .Interval(2)
         .Title("Million in USD (Stock)")
             .MajorGridLines(mg=>mg.Width(0)).Add();
     }).PrimaryYAxis(px => px
         .Minimum(83)
         .Title("Million in USD")
         .CrosshairTooltip(ct=>ct.Enable(true))
         .LabelFormat("{value}M")
         .Maximum(87)
         .Interval(1)
         .RowIndex(0)
          ).PrimaryXAxis(px => px
              .LabelFormat("MMM")
              .CrosshairTooltip(ct=>ct.Enable(true))
              .MajorGridLines(mg=>mg.Width(0))
              .ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime)
           ).LegendSettings(lg => lg.Visible(false)).Title("Conns, Inc Stock Details").ChartArea(area => area.Border(br => br.Width(0))
               ).ZoomSettings(zn => zn.EnableSelectionZooming(true).Mode(Syncfusion.EJ2.Charts.ZoomMode.X).EnablePinchZooming(true)).Crosshair(cr => cr.LineType(Syncfusion.EJ2.Charts.LineType.Both).Enable(true)).Load("load").Render()

        </div>
    </div>

    <script>
        var ChartPoints = window.axesData;
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Fluent2';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        };
    </script>
}
 @*custom code start*@
